# Recovera Docker Environment Variables
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=recoverauser
DB_PASSWORD=your-secure-database-password-here
DB_DATABASE=recovera

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-recommended-64
JWT_EXPIRES_IN=7d

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_PASSKEY=your-mpesa-passkey
MPESA_SHORTCODE=174379
MPESA_CALLBACK_URL=https://yourdomain.com/billing/mpesa/callback
MPESA_ENVIRONMENT=sandbox

# Airtel Money Configuration
AIRTEL_CLIENT_ID=your-airtel-client-id
AIRTEL_CLIENT_SECRET=your-airtel-client-secret
AIRTEL_MERCHANT_ID=your-merchant-id
AIRTEL_CALLBACK_URL=https://yourdomain.com/billing/airtel/callback
AIRTEL_ENVIRONMENT=sandbox

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Paystack Configuration (Optional)
PAYSTACK_SECRET_KEY=sk_test_your-paystack-key

# CORS Origin
CORS_ORIGIN=http://localhost,http://localhost:8080

# Port Configuration
BACKEND_PORT=3000
ADMIN_PORT=8080

# Admin API URL (for frontend)
VITE_API_URL=http://localhost:3000
